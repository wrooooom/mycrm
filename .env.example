# Application Configuration
APP_NAME="CRM.PROFTRANSFER"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=crm_db
DB_USER=crm_user
DB_PASSWORD=your_secure_password_here

# MySQL Root Password (for Docker)
MYSQL_ROOT_PASSWORD=your_root_password_here

# Session Configuration
SESSION_LIFETIME=3600
SESSION_SECURE=false
SESSION_HTTPONLY=true

# Security
CSRF_TOKEN_LIFETIME=3600
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_TIME_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_CHANNEL=daily
LOG_MAX_FILES=10

# Mail Configuration (if needed)
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_mail_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@proftransfer.com
MAIL_FROM_NAME="${APP_NAME}"

# Yandex Maps API
YANDEX_MAPS_API_KEY=09481e5b-e974-4f24-888d-7c9ee559fc6a

# File Upload
MAX_UPLOAD_SIZE=20
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/www/html/backups

# Real-time Notifications
REALTIME_ENABLED=true
SSE_ENABLED=true
POLLING_INTERVAL=30

# Analytics & Monitoring
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=

# Feature Flags
FEATURE_2FA=false
FEATURE_DARK_MODE=true
FEATURE_MOBILE_APP=false

# Performance
CACHE_ENABLED=true
CACHE_DRIVER=file
CACHE_LIFETIME=3600

# API Rate Limiting
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=60

# ========================================
# STAGE 5: Integration Configurations
# ========================================

# SMS Integration (SMS.ru / Twilio)
SMS_PROVIDER=smsru
SMS_API_KEY=
SMS_FROM_NUMBER=
SMS_TEST_MODE=true

# Twilio (if using Twilio provider)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Email Integration (Enhanced SMTP)
MAIL_TEST_MODE=false
MAIL_QUEUE_ENABLED=true

# Payment Gateway - Yandex.Kassa
PAYMENT_PROVIDER=yandex
PAYMENT_TEST_MODE=true
YANDEX_KASSA_SHOP_ID=
YANDEX_KASSA_API_KEY=
YANDEX_KASSA_SECRET_KEY=

# Payment Gateway - Stripe
STRIPE_API_KEY=
STRIPE_SECRET_KEY=

# Push Notifications (Firebase Cloud Messaging)
FCM_API_KEY=
FCM_SENDER_ID=
FCM_TEST_MODE=true

# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_TEST_MODE=true
TELEGRAM_WEBHOOK_ENABLED=false

# ERP/1C Integration
ERP_TYPE=1c
ERP_API_URL=
ERP_API_KEY=
ERP_TEST_MODE=true
ERP_AUTO_SYNC=false
ERP_SYNC_INTERVAL=3600

# GPS Tracking
GPS_TRACKING_ENABLED=false
GPS_UPDATE_INTERVAL=30
GPS_STORE_HISTORY_DAYS=90

# Export Configuration
EXPORT_PATH=/var/www/html/exports
EXPORT_MAX_ROWS=10000
EXPORT_TTL=86400
