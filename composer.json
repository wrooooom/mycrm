{
    "name": "proftransfer/crm",
    "description": "Production-ready CRM system for transportation and logistics management",
    "type": "project",
    "keywords": [
        "crm",
        "transportation",
        "logistics",
        "fleet-management",
        "php"
    ],
    "license": "proprietary",
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-mysqli": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-session": "*",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-zip": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "includes/db.php",
            "includes/functions.php",
            "includes/security.php",
            "includes/logger.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs --standard=PSR12 includes/ api/ config/",
        "cs-fix": "phpcbf --standard=PSR12 includes/ api/ config/",
        "stan": "phpstan analyse -l 5 includes/ api/ config/",
        "backup": "php scripts/backup.php create",
        "cleanup": "php scripts/cleanup.php",
        "post-install-cmd": [
            "@php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); echo 'Created .env file from .env.example'; }\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
